{#{% extends 'base.html.twig' %}#}

{% block body %}
    <h1>Bornes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Codepostal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borne in bornes %}
            <tr>
                <td><a href="{{ path('borne_show', { 'id': borne.id }) }}">{{ borne.id }}</a></td>
                <td>{{ borne.login }}</td>
                <td>{{ borne.adresse }}</td>
                <td>{{ borne.ville }}</td>
                <td>{{ borne.codePostal }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('borne_show', { 'id': borne.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('borne_edit', { 'id': borne.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('borne_new') }}">Create a new borne</a>
        </li>
    </ul>
{% endblock %}
