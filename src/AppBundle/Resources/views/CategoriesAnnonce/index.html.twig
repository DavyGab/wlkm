{% extends 'AppBundle:Base:base.html.twig' %}

{% block body %}
    <div class="container main-content">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="widget-container fluid-height clearfix">
                        <div class="heading">
                            <i class="fa fa-table"></i>Liste des catégories
                        </div>
                        <div class="heading">
                            <a href="{{ path('categorie_annonce_new') }}">
                                <i class="fa fa-plus"></i>Ajouter une catgéorie
                            </a>
                        </div>
                        <div class="widget-content padded clearfix">
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <table class="table table-bordered table-striped" id="dataTable1">
                                        <thead>
                                            <th> Nom </th>
                                        </thead>
                                        <tbody>
                                        {% for categorie in categories %}
                                            <tr>
                                                <td>
                                                    <a href="{{ path('categorie_annonce_edit', { 'id': categorie.id }) }}">
                                                        {{ categorie.nom }}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        $('#dataTable1').dataTable();
    </script>
{% endblock %}
